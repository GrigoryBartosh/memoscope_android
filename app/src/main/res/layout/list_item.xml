<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/icon_view"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/name_view"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_toRightOf="@id/icon_view"
        android:layout_toEndOf="@id/icon_view"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/time_view"
        android:layout_toRightOf="@id/icon_view"
        android:layout_toEndOf="@id/icon_view"
        android:layout_above="@id/text_view"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/text_view"
        android:textIsSelectable="true"
        android:padding="10sp"
        android:layout_below="@id/icon_view"/>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_below="@id/text_view"/>

    <Button
        android:id="@+id/prev_button"
        style="@style/ListButton"
        android:layout_below="@id/image_view"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_chevron_left_black_24dp" />

    <ImageButton
        style="@style/ListButton"
        android:id="@+id/open_vk_button"
        android:background="@drawable/ic_vklogo"
        android:layout_below="@id/image_view"
        android:layout_centerInParent="true"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"/>

    <ToggleButton
        style="@style/ListButton"
        android:id="@+id/like_button"
        android:layout_below="@id/image_view"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/open_vk_button"
        android:background="@drawable/like_button"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textOff=""
        android:textOn=""/>

    <Button
        style="@style/ListButton"
        android:layout_below="@id/image_view"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/open_vk_button"
        android:background="@drawable/share_button"/>

    <Button
        style="@style/ListButton"
        android:id="@+id/next_button"
        android:layout_below="@id/image_view"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_chevron_right_black_24dp" />

</RelativeLayout>